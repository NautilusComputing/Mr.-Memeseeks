        [Command("hello"), Alias("hi", "wassup", "sup"), Summary("Hello world command")]
        public async Task Hello()
        {
            await Context.Channel.SendMessageAsync("I'm Mr. Memeseeks, look at me!");
        }

        [Command("meme")]
        public async Task Meme()
        {
            int randomMemeIndex = rand.Next(dankestMemes.Length);
            await Context.Channel.SendMessageAsync("Can do!");
            string memeToBePosted = dankestMemes[randomMemeIndex];
            await Context.Channel.SendFileAsync(memeToBePosted);
        }
